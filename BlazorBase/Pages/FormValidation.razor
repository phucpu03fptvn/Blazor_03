@page "/form-validation-customer"
@using BlazorBase.ViewModels;

<h2 class="fw-bold">Customer contact form</h2>
<EditForm Model="@customerContact" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <div class="col-lg-6">
            <div class="form-group">
        <label for="fullName" class="">Full Name *</label>
        <InputText class="form-control" id="fullName" placeholder="Enter your full name" @bind-Value="customerContact.FullName" />
        <ValidationMessage For="@(() => customerContact.FullName)" />
    </div>

    <div class="form-group mt-4">
        <label for="email">Email *</label>
        <InputText type="email" class="form-control" id="email" placeholder="Enter your email" @bind-Value="customerContact.Email" />
        <ValidationMessage For="@(() => customerContact.Email)" />
    </div>

    <div class="form-group mt-4">
        <label for="phoneNumber">Phone Number *</label>
        <InputText type="tel" class="form-control" id="phoneNumber" placeholder="Enter your phone number" @bind-Value="customerContact.PhoneNumber" />
        <ValidationMessage For="@(() => customerContact.PhoneNumber)" />
    </div>

    <div class="form-group mt-4">
        <label for="address">Address *</label>
        <InputText class="form-control" id="address" placeholder="Enter your address" @bind-Value="customerContact.Address" />
        <ValidationMessage For="@(() => customerContact.Address)" />
    </div>

    <div class="form-group mt-4">
        <label for="message">Message *</label>
        <InputTextArea class="form-control" id="message" rows="3" placeholder="Enter your message" @bind-Value="customerContact.Message"></InputTextArea>
        <ValidationMessage For="@(() => customerContact.Message)" />
    </div>

    <div class="form-group mt-4">
        <label for="selectService">Select Service *</label>
        <select class="form-control form-control-sm" id="selectService" @bind="customerContact.SelectedService">
            <option value="">Choose...</option>
            <option value="consultation">Consultation</option>
            <option value="support">Customer Support</option>
            <option value="feedback">Feedback</option>
        </select>
        <ValidationMessage For="@(() => customerContact.SelectedService)" />
    </div>

    <div class="form-group mt-4">
        <label for="acceptTerms" class="form-check-label">
            <InputCheckbox class="form-check-input" id="acceptTerms" @bind-Value="customerContact.TermsAccepted" />
            I agree to the terms and conditions
        </label>
                <ValidationMessage For="@(() => customerContact.TermsAccepted)" />
    </div>

    <button type="submit" class="btn btn-primary w-100 mt-4">Submit</button>
    </div>

</EditForm>

@code {
    private CustomerContact customerContact = new CustomerContact();

    private void HandleValidSubmit()
    {
        Console.WriteLine("Form submitted successfully!");
    }
}
